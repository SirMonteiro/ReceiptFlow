<h1>Login</h1>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: sessions_path, method: :post, local: true do |f| %>
  <div>
    <%= label_tag :email, "E-mail" %><br>
    <%= text_field_tag :email, nil, placeholder: "Digite seu e-mail" %>
  </div>

  <div>
    <%= label_tag :password, "Senha" %><br>
    <%= password_field_tag :password, nil, placeholder: "Digite sua senha" %>
  </div>

  <div>
    <%= submit_tag "Entrar" %>
  </div>
<% end %>

<%= link_to "Cadastre-se", new_user_path %>
