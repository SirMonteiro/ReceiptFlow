<h1>Filtrar DANFEs por Data</h1>

<%= form_with url: filter_danfes_path, method: :get, local: true do |f| %>
  <div class="form-group">
    <%= f.label :data_inicial, "Data Inicial" %>
    <%= f.date_field :data_inicial, class: "form-control", value: params[:data_inicial] %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :data_final, "Data Final" %>
    <%= f.date_field :data_final, class: "form-control", value: params[:data_final] %>
  </div>

  <% if flash[:alert] %>
    <div class="alert alert-danger mt-3">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= f.submit "Filtrar", class: "btn btn-primary" %>
  </div>
<% end %>
