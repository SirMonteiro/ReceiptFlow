<h1>Log In</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Enter your email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter your password" %>
  </div>
  
  <%= f.submit "Log in" %>
<% end %>